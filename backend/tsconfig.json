{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist" ,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
